@model List<ITBaza.Models.DictionaryMenuItem>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var item in Model)
        {
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            var isActive = string.Equals(currentController, item.Controller, StringComparison.OrdinalIgnoreCase);

            <li class="list-group-item @(isActive ? "active fw-bold" : "")">
                <a href="/Dictonary/@item.Controller" class="nav-link @(isActive ? "text-white" : "text-dark")">
                    @item.Title
                </a>

            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">Меню не знайдено.</p>
}
