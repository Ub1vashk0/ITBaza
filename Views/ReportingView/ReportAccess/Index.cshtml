@{
    ViewData["Title"] = "Звіт по доступу";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <partial name="_ReportingSidebar" />
        </div>
        <div class="col-md-9">
            <h2>@ViewData["Title"]</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form method="post" asp-action="Search">
                <div class="mb-3">
                    <label for="login" class="form-label">Логін доступу</label>
                    <input type="text" name="login" id="login" class="form-control" placeholder="Введіть логін доступу" />
                </div>
                <button type="submit" class="btn btn-primary">Пошук</button>
            </form>
        </div>
    </div>
</div>
