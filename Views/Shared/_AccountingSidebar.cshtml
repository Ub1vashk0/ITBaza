@model List<ITBaza.Models.AccountingMenuItem>

<ul class="list-group">
    @foreach (var item in Model)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var isActive = string.Equals(currentController, item.Controller, StringComparison.OrdinalIgnoreCase);

        <li class="list-group-item @(isActive ? "active fw-bold" : "")">
            <a asp-controller="@item.Controller" asp-action="Index" class="nav-link @(isActive ? "text-white" : "text-dark")">
                @item.Title
            </a>
        </li>
    }
</ul>

